<div class="container user-show">
	<%= flash[:notice_user_update] %>
	<div class="row">
		<div class="col-6">
			<div class="row">
				<div class="prof-image">
					<%= attachment_image_tag @user, :image, :fill, 200, 200, fallback: "no_image.jpg",:size=>"200x200" %>
				</div><br>
				<div class="prof">
					<p>アカウント名: <%= @user.nickname %></p>
					<p>email: <%= @user.email %></p>
					<div class="edit_btn">
						<% if @user == current_user %>
							<%= link_to "編集する", edit_user_path(current_user), class:"btn btn-outline-primary" %>
						<% end %>
					</div>
					<div class="follow_btn">
						<% if @user != current_user %>
							<% if @user.followed_by?(current_user) %>
								<%= link_to "フォロー中", user_relationships_path(@user.id), method: :delete, class:"btn btn-outline-primary" %>
							<% else %>
								<%= link_to "フォローする", user_relationships_path(@user.id), method: :post, class:"btn btn-outline-primary" %>
							<% end %>
						<% end %>
					</div>
				</div>
			</div>
			<div class="row">
					<div class="box">
						Fav<br>
						<%= link_to user_favorites_path(@user) do %>
							<i class="fas fa-heart"></i>
							<%= @user.favorites.count %>
						<% end %>
					</div>
					<div class="box">
						Clip<br>
						<%= link_to user_clips_path(@user) do %>
							<i class="fas fa-paperclip"></i>
							<%= @user.clips.count %>
						<% end %>
					</div>
					<div class="box">
						劇場<br>
						<%= link_to user_theaters_path(@user.id) do %>
							<i class="fas fa-synagogue"></i>
							<%= @theaters.count %>
						<% end %>
					</div>
					<div class="box">
						フォロー中<br>
						<%= link_to follows_user_path(@user) do %>
							<i class="fas fa-address-book"></i>
							<%= @user.followings.count %>
						<% end %>
					</div>
					<div class="box">
						フォロワー<br>
						<%= link_to followers_user_path(@user) do %>
							<i class="far fa-address-book"></i>
							<%= @user.followers.count %>
						<% end %>
					</div>
			</div>
		</div>
		<div class="col-6">
			<div class="row">
				<div class="tag">
					<h3>投稿数：<%= @user.reviews.count %></h3>
				</div>
				<table class="table table-hover">
					<thead>
						<tr>
							<th>作品名</th>
							<th>投稿日</th>
						</tr>
					</thead>
					<tbody>
					<% @reviews.each do |review| %>
						<tr>
							<td>
								<%= link_to review_path(review) do %>
									<%= review.title %>
								<% end %>
							</td>
							<td>
								<%= l review.created_at, format: :long %>
							</td>
						</tr>
					<% end %>
					</tbody>
				</table>
				<%= paginate @reviews, class: "paginate" %>
			</div>
		</div>
	</div>
</div>