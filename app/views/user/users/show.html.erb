<div class="container user-show">
	<div class="row">
		<div class="col-6">
			<div class="row">
				<div class="prof-image">
					<%= attachment_image_tag @user, :image, :fill, 200, 200, fallback: "no_image.jpg",:size=>"200x200" %>
				</div><br>
				<div class="prof">
					<p>アカウント名: <%= @user.nickname %></p>
					<p>email: <%= @user.email %></p>
					<div class="edit_btn">
						<% if @user == current_user %>
							<%= link_to "編集する", edit_user_user_path(current_user), class:"btn btn-outline-primary" %>
						<% end %>
					</div>
					<div class="follow_btn">
						<% if @user != current_user %>
							<% if @user.followed_by?(current_user) %>
								<%= link_to "フォロー中", user_user_relationships_path(@user.id), method: :delete, class:"btn btn-outline-primary" %>
							<% else %>
								<%= link_to "フォローする", user_user_relationships_path(@user.id), method: :post, class:"btn btn-outline-primary" %>
							<% end %>
						<% end %>
					</div>
				</div>
			</div>
			<div class="row">
				<div class="status">
				<h3>ステータス</h3>
					<p>いいね</p>
					<div class="follow">
						フォロー中：
						<%= link_to follows_user_user_path(@user) do %>
							<%= @user.followings.count %>
						<% end %>
					</div>
					<div class="follow">
						フォロワー：
						<%= link_to followers_user_user_path(@user) do %>
							<%= @user.followers.count %>
						<% end %>
					</div>
					<div class="theater">
						劇場：
						<%= link_to user_theaters_path(@user.theaters) do %>
							<%= @theaters.count %>
						<% end %>
					</div>
				</div>
			</div>
		</div>
		<div class="col-6">
			<div class="row">
				<h3>投稿数：<%= @user.reviews.count %></h3>
				<table class="table table-borderless">
					<thead>
						<tr>
							<th></th>
							<th>作品名</th>
							<th>いいね数</th>
						</tr>
					</thead>
					<tbody>
					<% @reviews.each do |review| %>
						<tr>
							<td></td>
							<td>
								<%= link_to user_review_path(@review.user) do %>
									<%= review.title %>
								<% end %>
							</td>
							<td>
								<%= render 'favorites/favorites', review: review %>
							</td>
						</tr>
					<% end %>
					</tbody>
				</table>
			</div>
			<div class="row">
				<h3>いいね一覧:<%= @favorite_reviews.count %></h3>
				<table class="table table-borderless">
					<thead>
						<tr>
							<th></th>
							<th>作品名</th>
							<th>いいね数</th>
						</tr>
					</thead>
					<tbody>
					<% @favorite_reviews.each do |review| %>
						<tr>
							<td></td>
							<td>
								<%= link_to user_review_path(@review.user) do %>
									<%= review.title %>
								<% end %>
							</td>
							<td>
								<%= render 'favorites/favorites', review: review %>
							</td>
						</tr>
					<% end %>
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>