<div class="container">
	<h1>プロフィール編集</h1>
	<div class="row errors">
	<% if @user.errors.any? %>
        	<div id="error_explanation">
          		<h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
          		<ul>
          			<% @user.errors.full_messages.each do |msg| %>
            		<li><%= msg %></li>
          			<% end %>
          		</ul>
        	</div>
    	<% end %>
    </div>
	<div class="row">
	<%= form_for(@user, url: {controller: "users", action: "update"}) do |f| %>
		<div class="prof-img col-5">
			<div class="field">
				<%= f.attachment_field :image, placeholder: "プロフィール画像選択", id: :user_image %>
    		<% if @user.image.present? %>
    			<%= attachment_image_tag @user, :image, :fill, 200, 200, id: :img_prev, size: "200x200" %>
    		<% end %>
    		</div>
    	</div>
    	<div class="user-info col-7">
    		<div class="field">
				<label class="name">氏名</label>
				<%= f.text_field :last_name, autofocus: true %>
				<%= f.text_field :first_name, autofocus: true %>
			</div>
			<div class="field">
				<label class="kana">フリガナ</label>
    			<%= f.text_field :last_name_kana, autofocus: true %>
				<%= f.text_field :first_name_kana, autofocus: true %>
			</div>
			<div class="field">
				<label class="nickname">表示名</label>
    			<%= f.text_field :nickname, autofocus: true %>
			</div>
    		<div class="field">
				<label class="email">メールアドレス</label>
    			<%= f.email_field :email, autofocus: true %>
			</div>
    	</div>
			<%= f.submit "更新" %>
	<% end %>
	</div>
</div>
<script>
	$(function() {
    	function readURL(input) {
        	if (input.files && input.files[0]) {
        	var reader = new FileReader();
        	reader.onload = function (e) {
    	$('#img_prev').attr('src', e.target.result);
        	}
        		reader.readAsDataURL(input.files[0]);
        	}
    	}
    	$("#user_image").change(function(){
        	readURL(this);
    	});
 	 });
</script>