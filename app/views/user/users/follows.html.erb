<div class="container user-follows">
	<div class="row tag">
		<h1>フォロー中</h1>
	</div>
	<div class="row">
		<% @users.each do |user| %>
		<div class="polaroid">
			<div class="prof_image">
				<%= link_to user_path(user) do %>
					<%= attachment_image_tag(user, :image, :fill, 200, 200, fallback: "no_image.jpg", :size=>"200x200") %>
				<% end %>
			</div><br>
			<div class="nickname">
				<%= link_to user_path(user) do %>
					<%= user.nickname %>
				<% end %>
			</div><br>
		</div>
		<% end %>
		<%= paginate @users, class: "paginate" %>
	</div>
</div>