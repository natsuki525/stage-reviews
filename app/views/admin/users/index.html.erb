<div class="container admin-user-index">
	<h1>ユーザー一覧</h1>
	<div class="row">
		<dl class ="searchbox col-9">
        <%= search_form_for @search_u, url: admin_users_path do |f| %>
        	<div class ="searching">
                <dt><%= f.search_field :last_name_or_first_name_or_full_name_cont ,placeholder: "名前検索" %><%= f.submit ("検索") , class: 'search-btn' %></dt>
            </div>
        <% end %>
        </dl>
	</div>
	<div class="row">
		<table class="table">
			<thead>
				<tr>
					<th>id</th>
					<th>名前</th>
					<th>メールアドレス</th>
					<th>ステータス</th>
				</tr>
			</thead>
			<tbody>
				<% @users.each do |user| %>
				<tr>
					<td><%= user.id %></td>
					<td>
						<%= link_to admin_user_path(user.id) do %>
							<%= user.last_name + user.first_name %>
						<% end %>
					</td>
					<td><%= user.email %></td>
					<td>
						<% if user.is_deleted? %>
							退会済み
						<% else %>
							有効
						<% end %>
					</td>
				</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>